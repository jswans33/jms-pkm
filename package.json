{
  "name": "unified-knowledge-platform",
  "version": "1.0.0",
  "description": "Self-hosted knowledge management with voice control, AI processing, and home automation",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "start": "npm run start --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "quality": "npm run lint && npm run typecheck && npm run test",
    "clean": "rimraf apps/*/dist apps/*/build apps/*/.next",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "generate": "npm run generate --workspace=backend",
    "prepare": "husky install",
    "seed:dev": "cross-env NODE_ENV=development npx prisma db seed",
    "seed:test": "cross-env NODE_ENV=testing npx prisma db seed",
    "seed:staging": "cross-env NODE_ENV=staging npx prisma db seed",
    "seed:reset": "npx prisma migrate reset --force",
    "seed:clean": "npx prisma migrate reset --force --skip-seed"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^28.0.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.0.0",
    "prisma": "^6.16.2",
    "rimraf": "^6.0.0",
    "typescript": "^5.6.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": "eslint --max-warnings 0 --fix",
    "**/*.{js,jsx,json,md,css}": "prettier --write"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2"
  }
}
